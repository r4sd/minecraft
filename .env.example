# Minecraft Server Environment Variables
# Copy this file to .env and customize

# ========================================
# Basic Settings
# ========================================

# Minecraft version (LATEST for latest stable)
VERSION=LATEST

# Memory allocation (adjust based on your server)
MEMORY=4G

# Max players
MAX_PLAYERS=20

# View distance (higher = more resource intensive)
VIEW_DISTANCE=10

# Difficulty (peaceful, easy, normal, hard)
DIFFICULTY=normal

# Game mode (survival, creative, adventure)
MODE=survival

# ========================================
# Server Properties
# ========================================

# Server MOTD (Message of the Day)
MOTD=Welcome to Minecraft Server!

# Level seed (leave empty for random)
SEED=

# Level type (minecraft:normal, minecraft:flat, minecraft:amplified, etc.)
LEVEL_TYPE=minecraft:normal

# ========================================
# Auto Stop/Pause Settings
# ========================================

# Auto stop when no players (TRUE/FALSE)
ENABLE_AUTOSTOP=TRUE

# Timeout in seconds before auto stop
AUTOSTOP_TIMEOUT_EST=3600
AUTOSTOP_TIMEOUT_INIT=1800

# ========================================
# Plugins (Spiget Resource IDs)
# ========================================

# Comma-separated list of Spiget resource IDs
# ImageOnMap: 26585, DiscordSRV: 18494
# Find more at: https://www.spigotmc.org/resources/
SPIGET_RESOURCES=26585,18494

# ========================================
# RCON Settings
# ========================================

# RCON password (CRITICAL: CHANGE THIS FOR SECURITY!)
# Default "minecraft" is insecure and should be replaced
RCON_PASSWORD=minecraft

# RCON port
RCON_PORT=25575

# ========================================
# Whitelist
# ========================================

# Enable whitelist (true/false)
ENABLE_WHITELIST=false

# Whitelist players (comma-separated usernames)
# WHITELIST=player1,player2,player3

# ========================================
# Discord Webhook (for backup notifications)
# ========================================

# Discord webhook URL for backup notifications
# DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_URL

# ========================================
# Backup Settings
# ========================================

# Backup retention days
RETENTION_DAYS=7

# Backup directory
# BACKUP_DIR=/path/to/backups

# ========================================
# Advanced Settings
# ========================================

# Use Aikar's flags (recommended for performance)
USE_AIKAR_FLAGS=true

# Enable Query Protocol
ENABLE_QUERY=false

# Timezone
TZ=Asia/Tokyo
